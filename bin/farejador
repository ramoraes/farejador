#!/usr/bin/env php
<?php
$dir = 'd:/DEV/InfraCommerce/DEV/unilever/site';

include_once __DIR__ . '/../../../autoload.php';

use Farejador\Farejador;
use Farejador\GitComando;
use Farejador\PhpCsComando;

$gitComando = new GitComando($dir);
$phpCsComando = new PhpCsComando($dir);

$farejador = new Farejador($gitComando, $phpCsComando);
$farejador->farejar();

//echo "alo mamae";
exit;
